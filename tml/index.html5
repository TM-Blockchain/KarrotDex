<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>KarrotDex ü•ï</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Salty&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Salty', cursive;
    }
    .glow-box {
      background: rgba(255, 165, 0, 0.05);
      border: 1px solid #f97316;
      box-shadow: 0 0 15px rgba(255, 165, 0, 0.3);
    }
  </style>
</head>
<body class="bg-black text-white min-h-screen flex items-center justify-center p-4">

  <div class="w-full max-w-md bg-gray-900 rounded-xl p-6 glow-box space-y-4">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-3xl text-orange-400 font-bold flex items-center gap-2">
        ü•ï KarrotDex
      </h1>
      <button id="connectWallet" class="px-4 py-1 bg-purple-600 text-white rounded">Connect</button>
    </div>

    <div class="space-y-3">
      <!-- Token From -->
      <div>
        <label for="fromToken" class="block text-sm mb-1">From</label>
        <div class="flex gap-2">
          <select id="fromToken" class="w-full p-2 bg-gray-800 rounded text-white">
            <option value="">Select Token</option>
            <option value="0xToken1">WPLS</option>
            <option value="0xToken2">9MM</option>
            <option value="0xToken3">KARROT</option>
            <!-- Add more -->
          </select>
          <input id="fromAmount" type="number" placeholder="Amount" class="w-32 p-2 bg-gray-800 rounded text-white" />
        </div>
      </div>

      <!-- Token To -->
      <div>
        <label for="toToken" class="block text-sm mb-1">To</label>
        <div class="flex gap-2">
          <select id="toToken" class="w-full p-2 bg-gray-800 rounded text-white">
            <option value="">Select Token</option>
            <option value="0xToken3">KARROT</option>
            <option value="0xToken4">PXSTOCK</option>
            <option value="0xToken5">MXDAI</option>
            <!-- Add more -->
          </select>
          <input id="toAmount" type="number" placeholder="Min Receive" class="w-32 p-2 bg-gray-800 rounded text-white" />
        </div>
      </div>

      <!-- Optional To Address -->
      <div>
        <label for="recipient" class="block text-sm text-gray-400 mb-1">Send To (optional)</label>
        <input id="recipient" type="text" placeholder="Defaults to connected wallet" class="w-full p-2 bg-gray-800 rounded text-white placeholder-gray-500"/>
      </div>

      <!-- Swap Button -->
      <button id="swapBtn" class="w-full py-3 bg-gradient-to-r from-orange-500 via-yellow-400 to-orange-600 text-black font-bold rounded hover:opacity-90 transition">Swap</button>
    </div>

    <!-- Advanced Options -->
    <details class="mt-4">
      <summary class="cursor-pointer text-sm text-orange-300">‚öôÔ∏è Advanced Options</summary>
      <div class="mt-2 space-y-2 text-sm text-gray-300">
        <label class="block">Slippage Tolerance
          <input type="number" step="0.1" min="0.1" max="5" value="0.5" class="mt-1 p-1 bg-gray-800 rounded w-full text-white"/>
        </label>
        <label class="block">Gas Priority (GWEI)
          <input type="number" step="1" min="1" max="100" value="25" class="mt-1 p-1 bg-gray-800 rounded w-full text-white"/>
        </label>
      </div>
    </details>

    <!-- Footer -->
    <footer class="pt-6 text-center text-xs text-gray-500">
      Powered by Karrot ü•ï | PulseChain DEX Aggregator
    </footer>
  </div>

  <!-- Web3 Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/web3/dist/web3.min.js"></script>
  <script type="module" src="karrot-dex-logic.js"></script>

</body>
</html>
