<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Karrot XSwap</title>
  <link href="https://fonts.googleapis.com/css2?family=Salty&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Salty', cursive;
    }
    img {
      display: block;
      max-width: 100%;
    }
  </style>
</head>

<body class="relative bg-black text-white overflow-hidden">

  <!-- üî• Ember Background -->
  <div class="absolute inset-0 z-0">
    <img src="img/ember-particles.gif" class="w-full h-full object-cover opacity-40 mix-blend-screen" alt="embers">
    <div class="absolute inset-0 bg-black opacity-70"></div>
  </div>

  <div class="relative z-10 min-h-screen flex flex-col justify-start items-center pt-10">

    <!-- ü•ï Title -->
    <h1 class="text-6xl text-orange-400 drop-shadow-lg mb-4">ü•ï Karrot XSwap</h1>
    <button id="karrotVoiceBtn" class="mt-2 px-6 py-2 bg-purple-600 rounded shadow">Check Total Supply</button>

    <!-- üß™ Swap Interface -->
    <div class="max-w-xl w-full space-y-3 mt-10 p-6 rounded-xl border border-orange-500 bg-black bg-opacity-50 shadow-xl">
      <input id="tokenIn" placeholder="tokenIn address" class="w-full p-2 rounded bg-gray-800 text-white" />
      <input id="tokenOut" placeholder="tokenOut address" class="w-full p-2 rounded bg-gray-800 text-white" />
      <input id="amountIn" placeholder="amountIn (wei)" class="w-full p-2 rounded bg-gray-800 text-white" />
      <input id="minOut" placeholder="minOut (wei)" class="w-full p-2 rounded bg-gray-800 text-white" />
      <input id="targetChain" placeholder="Thor target chain (e.g., BTC)" class="w-full p-2 rounded bg-gray-800 text-white" />

      <div class="grid grid-cols-2 gap-3 mt-4">
        <button id="btnSwapPulsex" class="px-4 py-2 bg-purple-600 rounded shadow">Swap PulseX</button>
        <button id="btnSwap9mm" class="px-4 py-2 bg-purple-600 rounded shadow">Swap 9mm</button>
        <button id="btnSwapPancake" class="px-4 py-2 bg-purple-600 rounded shadow">Swap Pancake</button>
        <button id="btnSwapUniV3" class="px-4 py-2 bg-purple-600 rounded shadow">Swap UniV3</button>
        <button id="btnThor" class="col-span-2 px-4 py-2 bg-red-600 rounded shadow">ThorSwap (relay)</button>
      </div>
    </div>

    <!-- üë£ Footer Buttons (Optional / Future Expansion) -->
    <div class="mt-10 flex gap-4">
      <a href="karrot-shrine.html" class="text-orange-300 underline hover:text-white">‚Üê Return to Shrine</a>
      <a href="https://pulsex.com" target="_blank" class="text-blue-400 underline hover:text-white">Explore PulseX</a>
    </div>
  </div>

  <!-- üß† Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/web3/dist/web3.min.js"></script>
  <script src="karrot-logic.js"></script>
  <script src="voice-pack.js"></script>
  <script type="module" src="shrine-bind.js"></script>
  <script type="module" src="oracle-echo.js"></script>
</body>
</html>
